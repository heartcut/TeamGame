@implements IDisposable

<div class="mainwindow" @onmousemove="MyG.MouseMoved">
    <img src="/media/rainbowcurse.png" style="position: absolute;top:@GameScript.GetPlayerMouse(MyG,MyDBVars,1,"y");left:@GameScript.GetPlayerMouse(MyG,MyDBVars,1,"x");z-index:3;">
    <img src="/media/bcurs.png" style="position: absolute;top:@GameScript.GetPlayerMouse(MyG,MyDBVars,2,"y");left:@GameScript.GetPlayerMouse(MyG,MyDBVars,2,"x");z-index:3;">
    <img src="/media/rcurs.png" style="position: absolute;top:@GameScript.GetPlayerMouse(MyG,MyDBVars,3,"y");left:@GameScript.GetPlayerMouse(MyG,MyDBVars,3,"x");z-index:3;">
    <img src="/media/ycurs.png" style="position: absolute;top:@GameScript.GetPlayerMouse(MyG,MyDBVars,4,"y");left:@GameScript.GetPlayerMouse(MyG,MyDBVars,4,"x");z-index:3;">

    <div class="gamewindow" >
        @if (choosegame == 0)
        {
            <TeamNumberGame />
        }
        @if (choosegame != 0)
        {
            <player1window>
                <div class="playergame">
                    <!--lmao i love it-->
                    @if (choosegame == 1)
                    {
                        <SixNineGame />
                    }
                    @if (choosegame == 2)
                    {
                        <MakeSquare />
                    }
                    @if (choosegame == 3)
                    {
                        <MemorizeColorNumber />
                    }
                </div>
                <div class="player1health">
                    <!--i use the at ref to reference my other component to communicate acrros them-->
                    <!--yea not too sure how it works yet but hey-->
                    <Player1HealthBar myhealth="MyDBVars.P1Health" />

                </div>
            </player1window>
            <player2window>
                <div class="playergame">???????????????</div>
                <div class="player1health">
                    <Player2HealthBar myhealth="MyDBVars.P2Health" />
                </div>
            </player2window>
            <player3window>
                @*this is how you load components dynamicallys*@
                @*will need to set it up to put in a var for a player and it returns the right game*@
                @dynamicComponent(MyDBVars, 4)
                <div class="player1health">
                    <Player3HealthBar myhealth="MyDBVars.P3Health" />
                </div>
            </player3window>
            <player4window>
                @if (MyDBVars.P4Game == "sng")
                {
                    <SixNineGame />
                }
                <div class="player1health">
                    <Player4HealthBar myhealth="MyDBVars.P4Health" />
                </div>
            </player4window>
        }
    </div>

    <div class="testbuttons">
        <button @onclick="(() => ChooseAGame(0))">team play?</button>
        <button @onclick="(() => ChooseAGame(1))">sixninegame?</button>
        <button @onclick="(() => ChooseAGame(2))">makeasuqre?</button>
        <button @onclick="(() => ChooseAGame(3))">mem colornum</button>
        <a style="color:green;">your lobby number is: @MyLobbyNum</a>
        <a style="color:green;">player number is: @MyPlayerNum</a>
        <a style="color:white;">@MyG.mycursx</a>
        <a style="color:white;">@MyG.mycursy</a>
        <a style="color:yellow;">@MyG.Height</a>
        <a style="color:yellow;">@MyG.Width</a>
        @*this is the players in lobby*@
        @*<a style="color:white;">the amount of players in the lobby is:</a>
            <a style="color:white;">@HowManyPlayersInLobby</a>
            <a style="color:white;">you are player:</a>
            <a style="color:white;">@WhatPlayerAmI</a>*@
        <br />


        @if (MyG is null)
        {
            <a style="color:white;">loading coordinates</a>
        }
        else
        {
            <a style="color:white;">the following are database variables</a>
            <a style="color:white;">@MyDBVars.P1Xcords</a>
            <a style="color:white;">@MyDBVars.P1Ycords</a>
            <a style="color:white;">@MyDBVars.P3Xcords</a>
            <a style="color:white;">@MyDBVars.P3Ycords</a>
            <a style="color:white;">lobby number: </a>
            <a style="color:white;">@MyDBVars.LobbyNumber</a>
            <a style="color:white;">play1 health</a>
            <a style="color:white;">@MyDBVars.P1Health</a>
            <a style="color:white;">play2 health</a>
            <a style="color:white;">@MyDBVars.P2Health</a>
            <a style="color:white;">play3 health</a>
            <a style="color:white;">@MyDBVars.P3Health</a>
            <a style="color:white;">play4 health</a>
            <a style="color:white;">@MyDBVars.P4Health</a>
            <a style="color:red;">what is my game?: </a>
            <a style="color:white;">@MyG.MyCurrentGame</a>




        }
    </div>
    <div class="names">
        <div class="name1">Jesse</div>
        <div class="name2">Jared</div>
        <div class="name3">Cody</div>
        <div class="name4">Matthew</div>
    </div>
    <div class="timer"><strong>@stopwatchvalue</strong></div>
</div>
