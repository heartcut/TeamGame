{
    <img src="/media/bcurs.png" style="position: absolute;top:@GameScript.GetPlayerMouse(MyG,MyDBVars,1,"y");left:@GameScript.GetPlayerMouse(MyG,MyDBVars,1,"x");z-index:3;">

}
